    "input_move_down": "none",
    "input_move_left": "none",
    "input_move_right": "none",
    "input_move_up": "none",
    "input_newline": "shift+return",
    "input_paste": "none",
    "input_redo": "none",
    "input_select_buffer_end": "none",
    "input_select_buffer_home": "none",
    "input_select_down": "none",
