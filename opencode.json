{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "medium",
      "textVerbosity": "medium"
    },
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "xhigh",
      "textVerbosity": "medium"
    },
    "explore": {
      "mode": "subagent",
      "model": "openai/gpt-5.1-codex-mini",
      "reasoningEffort": "low",
      "textVerbosity": "medium"
    },
    "general": {
      "mode": "subagent",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "medium",
      "textVerbosity": "medium"
    }
  },
  "instructions": [
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/awareness.md",
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/workflow.md",
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/postcheck.md"
  ],
  "keybinds": {
