  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",

      "cd *": "allow",
      "dir *": "allow",
      "findstr *": "allow",
      "git branch": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "mv *": "allow",
      "ren *": "allow",
      "rg *": "allow",
      "type *": "allow",
      "where *": "allow",

      "dotnet build*": "allow",
      "dotnet restore*": "allow",
      "dotnet list*": "allow",
      "dotnet --version": "allow",
      "dotnet --info": "allow",
      "dotnet run*": "allow",
      "dotnet test*": "allow",

      "Remove-Item*": "deny",
      "del *": "deny",
      "rd *": "deny",
      "rm *": "deny",
      "rmdir *": "deny",

      "git branch -D *": "deny",
      "git branch -d *": "deny",
      "git checkout -- *": "deny",
      "git clean*": "deny",
      "git commit*": "deny",
      "git gc --prune*": "deny",
      "git push*": "deny",
      "git reflog expire*": "deny",
      "git reset --hard*": "deny",
      "git restore *": "deny",
      "git stash clear*": "deny",
      "git stash drop*": "deny",
      
      "* delete*": "deny",
      "* prune*": "deny",
      "* remove*": "deny",
      "* rm *": "deny",
      "* uninstall*": "deny",
      "* terminate*": "deny"
    },
    "codesearch": "allow",
    "doom_loop": "deny",
    "edit": {
      "*": "ask"
    },
    "external_directory": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "question": "allow",
    "read": {
      "*": "allow"
    },
    "skill": "allow",
    "task": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow"
  }
