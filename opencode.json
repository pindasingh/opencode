{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "description": "Full-power dev agent for complex work",
      "model": "openai/gpt-5.2-codex"
    },
    "explore": {
      "mode": "subagent",
      "description": "Lightweight search/basic exploration",
      "model": "openai/gpt-5.1-codex-mini"
    },
    "general": {
      "mode": "subagent",
      "description": "General-purpose research and multi-step tasks",
      "model": "openai/gpt-5.1-codex-mini"
    },
    "plan": {
      "mode": "primary",
      "description": "Full-power planning agent",
      "model": "openai/gpt-5.2-codex"
    }
  },
  "instructions": [
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/planning.md"
  ],
  "permission": {
    "bash": {
      "*": "ask",

      "ls *": "allow",
      "cat *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "pwd": "allow",
      "which *": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git branch": "allow",

      "rm *": "deny",
      "rmdir *": "deny",
      "del *": "deny",
      "rd *": "deny",
      "Remove-Item*": "deny",

      "git commit*": "deny",
      "git push*": "deny",
      "git reset --hard*": "deny",
      "git clean*": "deny",
      "git checkout -- *": "deny",
      "git restore *": "deny",
      "git stash drop*": "deny",
      "git stash clear*": "deny",
      "git branch -D *": "deny",
      "git branch -d *": "deny",
      "git reflog expire*": "deny",
      "git gc --prune*": "deny",

      "* delete*": "deny",
      "* rm *": "deny",
      "* remove*": "deny",
      "* prune*": "deny",
      "* uninstall*": "deny",
      "* terminate*": "deny"
    },
    "read": {
      "*": "allow"
    },
    "edit": {
      "*": "ask"
    }
  }
}
