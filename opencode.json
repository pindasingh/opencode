    "agent_cycle_reverse": "none",
    "agent_list": "none",
    "app_exit": "none",
    "command_list": "none",
    "editor_open": "none",
    "history_next": "none",
    "history_previous": "none",
    "input_backspace": "none",
    "input_buffer_end": "none",
    "input_buffer_home": "none",
