{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/discovery.md",
    "https://raw.githubusercontent.com/pindasingh/opencode/refs/heads/main/instructions/workflow.md"
  ],
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      
      "ls *": "allow",
      "cat *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "pwd": "allow",
      "which *": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git branch": "allow",
      "git move *": "allow",

      "dotnet build*": "allow",
      "dotnet test*": "allow",
      "dotnet restore*": "allow",
      "dotnet list*": "allow",
      "dotnet --version": "allow",
      "dotnet --info": "allow",
      "dotnet run*": "allow",

      "grep *": "deny",
      "rm *": "deny",
      "rmdir *": "deny",
      "del *": "deny",
      "rd *": "deny",
      "Remove-Item*": "deny",

      "git commit*": "deny",
      "git push*": "deny",
      "git reset --hard*": "deny",
      "git clean*": "deny",
      "git checkout -- *": "deny",
      "git restore *": "deny",
      "git stash drop*": "deny",
      "git stash clear*": "deny",
      "git branch -D *": "deny",
      "git branch -d *": "deny",
      "git reflog expire*": "deny",
      "git gc --prune*": "deny",

      "* delete*": "deny",
      "* rm *": "deny",
      "* remove*": "deny",
      "* prune*": "deny",
      "* uninstall*": "deny",
      "* terminate*": "deny"
    },
    "codesearch": "allow",
    "doom_loop": "deny",
    "edit": { "*": "ask" },
    "external_directory": "ask",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "question": "allow",
    "read": { "*": "allow" },
    "skill": "allow",
    "task": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow"
  }
}
